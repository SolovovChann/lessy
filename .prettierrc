{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "crlf",

  "overrides": [
    {
      "files": ["*.css", "*.less"]
    },
    {
      "files": ["*.js"],
      "options": {
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "avoid"
      }
    }
  ]
}
